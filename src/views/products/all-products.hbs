<div class="row">
  {{#each products}}
    <div class = "col-md-3">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title d-flex justfy-content-between align-items-center">
            {{name}} <a href="/products/edit/{{_id}}"><i class="fas fa-edit"></i></a>
          </h4>
          <p>{{description}}</p>
          <button class="btn btn-danger btn-block btn-sm">Eliminar</button>
        </div>
      </div>
    </div>
  {{else}}
    <div class="card mx-auto">
      <div class="card-body">
        <p class="lead">No hay productos todav√≠a</p>
        <a href="/products/new" class="btn btn-success btn-block">Crear un producto</a>
      </div>
    </div>
  {{/each}}
</div>